<body>
    <div class = "container">
        <%- include ("./partials/account-options.ejs") %>
        <div class = "header">
            <h3>NEW NUTRITIONAL WELLNESS LOG</h3>
            <a href = "/wellness/nutritionaltrend"><button class="btn btn-primary btn-sm">GO TO TREND</button></a>
        </div>
        <form class = "log-input" action = "/wellness/newnutritional" method = "post">
            <label for = "date">Date</label>
            <input type = "date" name = "date" id = "date" />
            <h4>Rate the accuracy statements below on a scale of 1 to 5.</h4>
            <label for = "listenedToBody">I listened to my body.</label>
            <input type = "number" name = "listenedToBody" id = "listenedToBody" placeholder = "1 - 5" min = "1" max = "5" />
            <label for = "ateVeggies">I ate enough veggies.</label>
            <input type = "number" name = "ateVeggies" id = "ateVeggies" placeholder = "1 - 5" min = "1" max = "5" />
            <label for = "drankWater">I drank enough water.</label>
            <input type = "number" name = "drankWater" id = "drankWater" placeholder = "1 - 5" min = "1" max = "5" />
            <input class="btn btn-primary btn-sm" type = "submit" value = "Add Log">
        </form>
    </div>
