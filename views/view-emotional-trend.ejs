<body>
    <div class = "container">
        <div class = "intro">
            <div class = "header">
                <h3>EMOTIONAL WELLNESS TREND</h3>
                <a href = "/wellness"><button class="btn btn-primary btn-sm">HOME</button></a>
            </div>
<!-- CREATE NEW LOG NAVIGATION BAR -->
        <nav class = "navbar">
            <div class = "row"> 
                <a class = "nav-text" href = "/wellness/newemotional"><button class="btn btn-primary btn-sm">LOG EMOTIONAL</button></a>
                <a class = "nav-text" href = "/wellness/newphysical"><button class="btn btn-primary btn-sm">LOG PHYSICAL</button></a>
                <a class = "nav-text" href = "/wellness/newnutritional"><button class="btn btn-primary btn-sm">LOG NUTRITIONAL</button></a>
                <a class = "nav-text" href = "/wellness/newsocial"><button class="btn btn-primary btn-sm">LOG SOCIAL</button></a>   
            </div>
        </nav>
<!-- SEE TRENDS NAV BAR -->
        <nav class = "navbar">
            <div class = "row"> 
                <a class = "nav-text" href = "/wellness/emotionaltrend"><button class="btn btn-primary btn-sm">EMOTIONAL TREND</button></a>
                <a class = "nav-text" href = "/wellness/physicaltrend"><button class="btn btn-primary btn-sm">PHYSICAL TREND</button></a>
                <a class = "nav-text" href = "/wellness/nutritionaltrend"><button class="btn btn-primary btn-sm">NUTRITIONAL TREND</button></a>
                <a class = "nav-text" href = "/wellness/socialtrend"><button class="btn btn-primary btn-sm">SOCIAL TREND</button></a>   
            </div>
        </nav>
    </div>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Mindfulness</th>
                <th>Gratitude</th>
                <th>Goal Reflection</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% wellnessData.forEach(data => { %>
                <tr>
<!-- referenced https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Intl/DateTimeFormat/DateTimeFormat for date format -->
                    <td><%= new Intl.DateTimeFormat("en" , {dateStyle:"short"}).format(data.date) %></td>
                    <td><%= data.practicedMindfulness %></td>
                    <td><%= data.practicedGratitude %></td>
                    <td><%= data.reflectedOnGoals %></td>
                    <td><a href = "/wellness/emotionaltrend/<%= data.id %>/edit" ><button class="btn btn-primary btn-sm">EDIT</button></a></td>
                    <td>
                        <form action = "/wellness/emotionaltrend/<%= data.id %>?_method=delete" method = "post">
                            <input class="btn btn-primary btn-sm" type = "submit" value = "DELETE"/>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
<img src = "https://static.vecteezy.com/system/resources/previews/002/030/935/large_2x/yellow-flowers-on-white-background-free-photo.jpg">
